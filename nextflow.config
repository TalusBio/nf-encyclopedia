profiles {
    standard {
        params.use_aws = false
        docker.enabled = true
        process.container = 'proteowizard/panorama-encyclopedia:0.9.5'
        process.executor = 'local'
    }
    cloud {
        params.use_aws = true
        docker.enabled = true
        process.container = 'rmeinl/encyclopedia:latest'
        process.executor = 'awsbatch'
        process.queue = {
            task.attempt > 1 ? 'large-size-batch-job-queue' : 'medium-size-batch-job-queue' 
        }
        process.memory = { 
            task.attempt > 1 ? 31100.MB : 15400.MB 
        }
        process.cpus = { 
            task.attempt > 1 ? 16 : 8 
        }
    }
}

plugins {
    id 'nf-sqldb@0.1.0'
    id 'nf-amazon'
}

aws {
    region = 'us-west-2'
    client {
        storageEncryption = 'AES256'
    }
    batch {
        jobRole = 'arn:aws:iam::622568582929:role/talus-data-pipeline-batch-job-role'
    }
}

sql {
    db {
        'benchling' {
            url = '${params.benchling_url}'
            user = '${params.benchling_user}'
            password = '${params.benchling_pw}'
        }
    }
}